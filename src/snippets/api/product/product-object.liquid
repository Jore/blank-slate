  "_id": {{ _product.id | json }},
  "active": {%- if product.handle == _product.handle -%}true{%- else -%}false{%- endif -%},
  "available": {{ _product.available | json }},
  "collections": [{% for _collection in _product.collections %}"{{ _collection.handle }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
  "compare_at_price_max": {{ _product.compare_at_price_max | json }},
  "compare_at_price_min": {{ _product.compare_at_price_min | json }},
  "compare_at_price_varies": {{ _product.compare_at_price_varies | json }},
  "content": {{ _product.content | json }},
  "description": {{ _product.description | json }},
  "handle": {{ _product.handle | json }},
  "id": {{ _product.id | json }},
  "options": [{%- for option in _product.options_with_values -%}{%- include 'option-object', option: option -%}{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}],
  "price": {{ _product.price | json }},
  "price_max": {{ _product.price_max | json }},
  "price_min": {{ _product.price_min | json }},
  "price_varies": {{ _product.prices_varies | json }},
  "tags": {{ _product.tags | json }},
  "title": {{ _product.title | json }},
  "type": {{ _product.type | json }},
  "variantIds": [{%- for variant in _product.variants -%}{{ variant.id }}{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}],
  "vendor": {{ _product.vendor | json }}
