{% comment %}

  Required arguments:
  - options

  Optional arguments:

{% endcomment %}

<script type="application/json" data-from-shopify="option">
{
  "data": [
    {%- for option in options -%}
      {%- for value in option.values -%}
        {%- if value == 'Default Title' -%}{% continue %}{%- endif -%}
        {%- include 'value-object',
          option: option,
          value: value -%}{%- unless forloop.last -%},{%- endunless -%}
      {%- endfor -%}{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
}
</script>
