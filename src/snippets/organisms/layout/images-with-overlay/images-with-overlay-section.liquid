{%- capture content_items -%}
  {%- for block in section.blocks -%}

    {%- include 'images-with-overlay-section-block',
      section: section,
      block: block -%}

  {%- endfor -%}
{%- endcapture -%}


{%- if section.settings.is_slider and section.blocks.size > 1 -%}

  {%- include 'container',
    type: 'slider',
    name: section.settings.title,
    content: content_items,
    classes: '',
    attrs: '' -%}

{%- else -%}

  {{ content_items }}

{%- endif -%}

{%- include 'add-classes-to-section' -%}
{%- include 'override-styles', section_name: 'images-with-overlay' -%}
