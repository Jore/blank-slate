{%- capture product_gallery_slides -%}
  {%- for image in _product.images -%}
    {%- assign _resource = false -%}
    {%- assign _size = '1440x' -%}
    {%- assign _classes = 'gallery-slide' -%}
    {%- assign _name = 'Product Gallery' -%}
    {%- assign _nav_for = nil -%}
    {%- assign _alt = image.alt -%}

    {%- if thumbs == true -%}
      {%- assign _resource = image -%}
      {%- assign _size = '280x' -%}
      {%- assign _classes = _classes | append: '-thumb' -%}
      {%- assign _name = _name | append: ' Thumbs' -%}
      {%- assign _nav_for = 'Product Gallery' -%}
    {%- endif -%}


    {%- if group_images != blank -%}
      {%- assign alt_parts = image.alt | split: alt_tag_delimiter -%}
      {%- assign _alt = alt_parts | first -%}

      {%- capture slide_attrs -%}
        data-filter-value="{{ alt_parts | last | strip }}"
        data-slide-index="{{ forloop.index0 }}"
        {%- if thumbs != true -%}
          data-flickity-lazyload="{{ image.src | img_url: _size }}"
        {%- else -%}
          data-gallery-thumb
        {%- endif -%}
      {%- endcapture -%}
    {%- endif -%}

    {%- include 'image',
      resource: _resource,
      alt: _alt,
      size: _size,
      lazyload: false,
      wrapper: false,
      format: 'pjpg',
      classes: _classes,
      attrs: slide_attrs  -%}

    {%- assign slide_attrs = nil -%}

  {%- endfor -%}
{%- endcapture -%}



{%- capture _attrs -%}
  data-nav-for="{{- _nav_for -}}"
{%- endcapture -%}

{%- include 'container',
  type: 'slider',
  name: _name,
  content: product_gallery_slides,
  classes: classes,
  attrs: _attrs -%}


{%- assign _resource = nil -%}
{%- assign _alt = nil -%}
{%- assign _size = nil -%}
{%- assign _classes = nil -%}
{%- assign _name = nil -%}
{%- assign _nav_for = nil -%}
