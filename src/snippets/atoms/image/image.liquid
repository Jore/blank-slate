{%- assign COMPONENT_NAME = 'image' -%}

{%- comment -%}

  Required arguments:
  - resource

  Optional arguments:
  - alt
  - size
  - crop
  - scale
  - format
  - srcset
  - sizes
  - sources
  - lazyload
  - wrapper
  - wrapper_tag
  - picture
  - classes
  - attrs

{%- endcomment -%}


{%- capture _src -%}
  {%- include 'img-url',
    resource: resource,
    size: size,
    crop: crop,
    scale: scale,
    format: format -%}
{%- endcapture -%}

{%- capture _lqip_src -%}
  {%- include 'lqip-img-url',
    resource: resource,
    size: size,
    crop: crop,
    scale: scale,
    format: format -%}
{%- endcapture -%}

{%- capture _srcset -%}
  {%- include 'srcset',
    resource: resource,
    srcset: srcset,
    size: size -%}
{%- endcapture -%}

{%- capture _sizes -%}
  {%- include 'sizes' with sizes -%}
{%- endcapture -%}

{%- assign tag = 'div' -%}
{%- if picture == true -%}
  {%- assign tag = 'picture' -%}
{%- elsif wrapper_tag != blank -%}
  {%- assign tag = wrapper_tag -%}
{%- endif -%}


{%- unless wrapper == false -%}
  <{{- tag }} class="oo-image-wrapper {{ classes -}}" {{ attrs -}}>
{%- endunless -%}

  {%- if sources != blank -%}

    {{- sources -}}

  {%- else -%}

    <img
      class="oo-image {% unless lazyload == false -%} lazyload {%- endunless -%}
        {%- if wrapper == false -%} {{ classes -}} {%- endif -%}"
      alt="{%- if alt != blank -%}{{- alt -}}{%- else -%}{{- resource.alt -}}{%- endif -%}"
      {%- if lazyload != false -%}
        data-src="{{- _src -}}"
        data-srcset="{{- _srcset -}}"
        src="{{- _lqip_src -}}"
      {%- else -%}
        srcset="{{- _srcset -}}"
        src="{{- _src -}}"
      {%- endif -%}
      {%- if sizes != blank -%}data-sizes="{{- _sizes -}}"{%- endif -%}
      {%- if wrapper == false -%}{{ attrs -}}{%- endif -%} />

  {%- endif -%}

{%- unless wrapper == false -%}
  </{{- tag -}}>
{%- endunless -%}

{%- assign _src = nil -%}
{%- assign _lqip_src = nil -%}
{%- assign _srcset = nil -%}
{%- assign _sizes = nil -%}
{%- assign tag = nil -%}


{%- assign COMPONENT_NAME = nil -%}
