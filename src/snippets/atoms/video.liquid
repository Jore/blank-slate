{%- assign COMPONENT_NAME = 'video' -%}

{%- comment -%}

  Required arguments:
  - src

  Optional arguments:
  - controls
  - muted
  - autoplay
  - loop
  - poster

{%- endcomment -%}


<video
  class="oo-video {{ classes -}}"
  src="{{- src -}}"
  {%- if controls != blank -%}controls{%- endif -%}
  {%- if muted != blank -%}muted{%- endif -%}
  {%- if autoplay != blank -%}autoplay{%- endif -%}
  {%- if loop != blank -%}loop{%- endif -%}
  {%- if poster != blank -%}poster="{{- poster -}}"{%- endif -%}
  {{ attrs -}}>

  Sorry, your browser doesn't support embedded videos.

</video>

{%- assign COMPONENT_NAME = nil -%}
