{%- assign COMPONENT_NAME = 'icon' -%}

{%- comment -%}

  Required arguments:
  - name

{%- endcomment -%}

{%- assign icon_name = name | remove_first: 'icon-' | prepend: 'icon-' -%}

<div class="oo-icon {{ name }} {{ classes -}}"
  {%- if height != blank or width != blank -%}
    style="
      {%- if height != blank -%}height: {{- height -}};{%- endif -%}
      {%- if width != blank -%}width: {{- width -}};{%- endif -%}"
  {%- endif -%}
  {{ attrs -}}>

  {%- include icon_name,
    classes: '',
    attrs: '' -%}

</div>

{%- assign icon_name = nil -%}

{%- assign COMPONENT_NAME = nil -%}
