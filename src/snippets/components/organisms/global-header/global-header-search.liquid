{%- comment -%}

  Optional arguments:
  - placeholder

{%- endcomment -%}


{%- capture _search_form_content -%}
  {%- capture _search_input_attrs -%}
    required data-search-input placeholder="{{ placeholder }}"
  {%- endcapture -%}

  {%- include 'input',
    type: 'hidden',
    name: 'type',
    value: 'product',
    classes: '',
    attrs: '' -%}

  {%- include 'input',
    type: 'search',
    name: 'q',
    id: '',
    classes: '',
    attrs: _search_input_attrs -%}

  {%- include 'button',
    type: 'submit',
    icon: 'search',
    classes: '',
    attrs: '' -%}
{%- endcapture -%}


{%- capture _attrs -%}
  {{ attrs }} method="post" action="/search"
{%- endcapture -%}

{%- include 'container',
  type: 'form',
  name: 'global-header-search',
  content: _search_form_content,
  attrs: _attrs -%}


{%- assign _search_input_attrs = nil -%}
{%- assign _search_form_content = nil -%}
