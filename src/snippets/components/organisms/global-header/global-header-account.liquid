{%- comment -%}

  Required arguments:

  Optional arguments:
  - account_icon
  - cart_content
  - classes
  - attrs

{%- endcomment -%}

{%- capture _account_content -%}
  {%- if customer and account_logout_text -%}
    {{ account_logout_text }}
  {%- elsif customer == blank and account_login_text != blank -%}
    {{ account_login_text }}
  {%- endif -%}
{%- endcapture -%}

{%- capture _attrs -%}
  {{ attrs }}
  data-toggle-account
{%- endcapture -%}

{%- include 'button',
  icon: account_icon,
  content: _account_content,
  attrs: _attrs -%}

{%- assign _account_content = nil -%}
{%- assign _attrs = nil -%}
