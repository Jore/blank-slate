{%- assign COMPONENT_NAME = 'global-footer' -%}

{%- case block.type -%}

  {%- when 'logo' -%}

    {%- if block.settings.logo_snippet_name != blank-%}

      {%- capture svg_logo_link_content -%}
        {%- include block.settings.logo_snippet_name -%}
      {%- endcapture -%}

      {%- include 'link',
        content: svg_logo_link_content,
        href: '/',
        classes: 'global-footer--logo',
        attrs: '' -%}

    {%- else -%}

      {%- capture footer_logo_image_content -%}
        {%- include 'image',
          resource: block.settings.footer_logo,
          size: '200x',
          wrapper: false,
          classes: '',
          attrs: '' -%}
      {%- endcapture -%}

      {%- include 'link',
        href: '/',
        content: footer_logo_image_content
        classes: 'global-footer--logo',
        attrs: '' -%}

    {%- endif -%}


  {%- when 'contact' -%}

    {%- include 'global-footer-contact', content: block.settings.footer_contact_info -%}

  {%- when 'social_links' -%}

    {%- include 'global-footer-social-links', block_settings: block.settings, -%}

  {%- when 'footer_links' -%}

    {%- include 'global-footer-links',
      menu: block.settings.footer_links_link_list,
      show_social_icons: block.settings.show_social_icons -%}

  {%- when 'newsletter' -%}

    {%- include 'newsletter-signup',
      heading: block.settings.heading,
      heading_classes: block.settings.heading_classes,
      placeholder: block.settings.placeholder_text,
      submit_icon: block.settings.submit_icon,
      submit_text: block.settings.submit_text,
      classes: 'global-footer-newsletter-signup',
      attrs: '' -%}

{%- endcase -%}


{%- assign COMPONENT_NAME = nil -%}
