{%- comment -%}

  Required arguments:
  - menu

  Optional arguments:
  - show_social_icons

{%- endcomment -%}

<section class="global-footer--links">

  {%- for parent in linklists[menu].links -%}

    <div class="global-footer--links-block">

      {%- include 'header',
        level: 3,
        heading: parent.title,
        heading_classes: 'heading-three',
        classes: 'global-footer--links-header',
        attrs: '' -%}

      <div class="footer--links">

        {%- for child in parent.links -%}

          {%- assign icon = blank -%}
          {%- assign networks = 'facebook,twitter,instagram,youtube,pinterest' | split: ',' -%}

          {%- if show_social_icons == true -%}
            {%- if networks contains child.handle -%}
              {%- assign icon = child.handle -%}
            {%- endif -%}
          {%- endif -%}

          {%- include 'link',
            href: child.url,
            content: child.title,
            icon: icon,
            classes: 'global-footer--link text-one u-text-light-gray',
            attrs: '' -%}

        {%- endfor -%}

      </div>

    </div>

  {%- endfor -%}

</section>
