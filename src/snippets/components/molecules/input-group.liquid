{%- assign COMPONENT_NAME = 'input-group' -%}

{%- comment -%}

  Required arguments:
  • type
  • name

  Optional arguments:
  • value
  • label_content
  • input_classes
  • input_attrs
  • label_classes
  • label_attrs


{%- endcomment -%}


{%- capture _input_group -%}
  {%- capture _id -%}{%- include 'id' -%}{%- endcapture -%}
  {%- assign _type = type | default: 'input' -%}
  {%- assign _label_content = label_content | default: value -%}

  {%- include _type,
    id: _id,
    type: input,
    content: content,
    name: name,
    value: value,
    selected_value: selected_value,
    classes: input_classes,
    attrs: input_attrs -%}

  {%- include 'label',
    for: _id,
    content: _label_content,
    classes: label_classes,
    attrs: label_attrs -%}
{%- endcapture -%}


{%- include 'wrapper',
  type: 'input-group',
  name: '',
  content: _input_group -%}


{%- assign _id = nil -%}
{%- assign _type = nil -%}
{%- assign _label_content = nil -%}
{%- assign _input_group = nil -%}
{%- assign COMPONENT_NAME = nil -%}
