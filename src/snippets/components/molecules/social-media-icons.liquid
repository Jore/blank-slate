{%- assign COMPONENT_NAME = 'social-media-icons' -%}

{%- comment -%}

  Required arguments:
  • networks

  Optional arguments:
  • classes
  • attrs

{%- endcomment -%}


{%- capture _social_media_icons -%}
  {%- assign _networks_array = networks | split: ',' -%}

  {%- for network in _networks_array -%}
    {%- assign _setting_name = network | append: '_link' -%}
    {%- capture _attrs -%}data-network="{{- network -}}"{%- endcapture -%}

    {%- include 'link',
      href: settings[_setting_name],
      icon: network,
      classes: '',
      attrs: _attrs -%}
  {%- endfor -%}
{%- endcapture -%}


{%- include 'wrapper',
  type: 'social-media-icons',
  content: _social_media_icons -%}


{%- assign _networks_array = nil -%}
{%- assign _setting_name = nil -%}
{%- assign _attrs = nil -%}
{%- assign COMPONENT_NAME = nil -%}
