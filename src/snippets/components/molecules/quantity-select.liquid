{%- assign COMPONENT_NAME = 'option-group' -%}

{%- comment -%}

  Required arguments:

  Optional arguments:
  • quantity
  • content
  • name

{%- endcomment -%}


{%- capture _quantity_select -%}
  {%- assign _quantity = quantity | default: 1 -%}
  {%- capture _id -%}{%- include 'id' -%}{%- endcapture -%}

  {%- if content -%}
    {%- include 'label',
      content: content,
      for: _id,
      classes: 'quantity-select-label',
      attrs: 'data-quantity-label' -%}
  {%- endif -%}

  {%- include 'input',
    type: 'number',
    name: 'quantity',
    value: _quantity,
    id: _id,
    classes: 'quantity-select-value',
    attrs: 'min=1 data-quantity-value' -%}
{%- endcapture -%}


{%- include 'container',
  type: 'quantity-select',
  content: _quantity_select -%}


{%- assign _quantity_select = nil -%}
{%- assign _quantity = nil -%}
{%- assign _id = nil -%}
{%- assign COMPONENT_NAME = nil -%}
