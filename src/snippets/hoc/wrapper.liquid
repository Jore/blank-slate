{%- comment -%}

  Required arguments:
  - title

  Optional arguments:
  - level
  - content
  - classes
  - attrs

{%- endcomment -%}


<header class="oo-header {{ classes -}}" {{ attrs -}}>

  {%- include 'heading',
    level: level,
    title: title,
    classes: '',
    attrs: '' -%}

  {{- content -}}

</header>


