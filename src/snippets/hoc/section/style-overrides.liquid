  color::overlay_text_color::.overlay-sub-heading,
  color::button_one_text_color::.overlay-button-one,
  color::button_two_text_color::.overlay-button-two,
  background-color::button_one_bg_color::.overlay-button-one,
  background-color::button_two_bg_color::.overlay-button-two,
  border-color::button_one_border_color::.overlay-button-one,
  border-color::button_two_border_color::.overlay-button-two,
{%- endcapture -%}

{%- capture row_overrides -%}
