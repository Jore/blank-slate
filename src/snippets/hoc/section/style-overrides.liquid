  {%- comment -%}

    Templates

  {%- endcomment -%}

    {%- when 'home-page-hero-block' -%}
      {{ images_with_overlay_block_overrides }}

    {%- when 'collection-hero-block' -%}
      {{ images_with_overlay_block_overrides }}

    {%- when 'collection-page-windows-section' -%}
      {{ section_background_color_overrides }}

    {%- when 'collection-page-windows-block' -%}
      {{ images_with_overlay_block_overrides }}

    {%- when 'product-secondary-section' -%}
      {{ section_background_color_overrides }}

