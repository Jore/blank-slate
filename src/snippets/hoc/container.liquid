{% comment %}

  Required arguments:
  - type
  - content

  Optional arguments:
  - name
  - tag

{% endcomment %}


<{%- if tag != blank -%}{{- tag -}}{%- else -%}section{%- endif %}
  class="{{- classes -}}"
  data-container="{{- type -}}"
  data-container-name="{%- include 'name' -%}"
  data-container-id="{%- include 'id' -%}"
  {{ attrs -}}>

  {{- content -}}

</{%- if tag != blank -%}{{- tag -}}{%- else -%}section{%- endif -%}>
