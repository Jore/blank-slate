{%- capture _context -%}
  {%- include 'context' -%}
{%- endcapture -%}

{%- capture _wrapper_container -%}
  {%- if _context contains 'wrapper' -%}
    data-wrapper="{{- WRAPPER_TYPE -}}"
    {%- if WRAPPER_NAME != blank -%}data-wrapper-name="{{- WRAPPER_NAME -}}"{%- endif -%}
  {%- elsif _context contains 'container' -%}
    data-container="{{- CONTAINER_TYPE -}}"
    data-container-id="{%- include 'id' -%}"
    {%- if CONTAINER_NAME != blank -%}data-container-name="{{- CONTAINER_NAME -}}"{%- endif -%}
  {%- endif -%}
{%- endcapture -%}

{%- capture _attrs -%}
  {{- attrs }} {{ _wrapper_container -}}
{%- endcapture -%}


{{- _attrs -}}


{%- assign _context = nil -%}
{%- assign _wrapper_container = nil -%}
{%- assign _attrs = nil -%}
{%- assign attrs = nil -%}
