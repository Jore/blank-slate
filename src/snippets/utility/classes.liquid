{%- capture _context -%}
  {%- include 'context' -%}
{%- endcapture -%}

{%- capture _component_wrapper_container -%}
  {%- if _context contains 'wrapper' -%}
    {{- WRAPPER_TYPE | handle -}}-wrapper
  {%- elsif _context contains 'container' -%}
    {{- CONTAINER_TYPE | handle -}}-container
  {%- elsif _context contains 'component' -%}
    xx-{{- COMPONENT_NAME | handle -}}
  {%- endif -%}
{%- endcapture -%}

{%- capture _classes -%}
  {{- classes }} {{ _component_wrapper_container -}}
{%- endcapture -%}


{{- _classes | strip -}}


{%- assign _context = nil -%}
{%- assign _component_wrapper_container = nil -%}
{%- assign _classes = nil -%}
{%- assign classes = nil -%}
