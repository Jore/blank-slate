{%- include 'section',
  section_name: 'Images With Overlay',
  blocks_snippet: 'images-with-overlay' -%}

{% schema %}
  {
    "name": "Image(s) with overlay",
    "class": "home-page-images-with-overlay",
    "settings": [
      {
        "type": "header",
        "content": "Images w/ Overlay"
      },
      {
        "type": "paragraph",
        "content": "Image(s) with overlay content (i.e. heading, sub-heading, cta) overlaid. If more than one content block is used, the section can be turned into a slider by enabling the checkbox below. The slider will use the matching settings in `src/scripts/components/Slider/settings.js` or the default settings if none are found."
      },
      {
        "type": "header",
        "content": "Section Settings"
      },
      {
        "type": "checkbox",
        "id": "is_slider",
        "label": "Section is slider",
        "default": false
      },
      {
        "type": "color",
        "id": "section_background_color",
        "label": "Section background color"
      },
      {
        "type": "header",
        "content": "Classes"
      },
      {
        "id": "container_classes",
        "type": "text",
        "label": "Section Container Classes",
        "placeholder": "flex-12 s-flex-6",
        "info": "Class string applied to outermost section element"
      },
      {
        "type": "text",
        "id": "children_classes",
        "label": "Children Classes",
        "placeholder": "flex-12 m-flex-4",
        "info": "Class string applied to every block in section"
      },
      {
        "type": "header",
        "content": "Name"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Section Name",
        "placeholder": "Best Sellers Row",
        "info": "Give the section a specific identifier. Adds handlized version of name to inner section container element and updates the title of the section in the admin sidebar."
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "settings": [
          {
            "type": "header",
            "content": "Primary Image"
          },
          {
            "id": "primary_image",
            "type": "image_picker",
            "label": "Primary Image"
          },
          {
            "type": "text",
            "id": "primary_image_size",
            "label": "Primary Image Size",
            "placeholder": "1600x",
            "info": "[width]x[height] - recommended"
          },
          {
            "type": "text",
            "id": "primary_image_srcset",
            "label": "Primary Image Srcset",
            "placeholder": "800x 800w, 1200x 1200w",
            "info": "<size> <width>x|w"
          },
          {
            "type": "text",
            "id": "primary_image_sizes",
            "label": "Primary Image Sizes",
            "placeholder": "min 380px 100vw, min 1600px 50vw",
            "info": "<direction> <width>px <slot>px|vw"
          },
          {
            "type": "header",
            "content": "Secondary Image"
          },
          {
            "id": "second_image",
            "type": "image_picker",
            "label": "Second Image"
          },
          {
            "type": "text",
            "id": "second_image_size",
            "label": "Second Image Size",
            "placeholder": "1600x",
