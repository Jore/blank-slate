{%- include 'section',
  section_name: 'Global Footer',
  blocks_snippet: 'global-footer-case-statement',
  container: 'grid' -%}

{% schema %}
  {
    "name": "Global Footer",
    "class": "global-footer-wrapper",
    "settings": [
      {
        "type": "checkbox",
        "id": "footer_enabled",
        "label": "Footer Enabled?",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "footer_logo",
            "label": "Footer Logo"
          },
          {
            "type": "text",
            "id": "logo_snippet_name",
            "label": "Logo Snippet Name",
            "info": "if logo is an svg snippet, enter the snippet name here"
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      },
      {
        "type": "contact",
        "name": "Contact",
        "limit": 1,
        "settings": [
          {
            "type": "textarea",
            "id": "footer_contact_info",
            "label": "Footer Contact Info",
            "default": "<ul class='contact-items'><li><a href='mailto:support@mvmt.com'>support@mvmt.com</a></li><li>Call Toll-Free <br> <a href='tel:8885070220'>+1 (888) 507-0220</a></li><li>M-T 8:30-2 pm &amp; F 9-1 pm PST</li></ul>"
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      },
      {
        "type": "social_links",
        "name": "Social Links",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "facebook_link",
            "label": "Show Facebook Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "twitter_link",
            "label": "Show Twitter Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "instagram_link",
            "label": "Show Instagram Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "youtube_link",
            "label": "Show YouTube Link",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "pinterest_link",
            "label": "Show Pinterest Link",
            "default": false
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      },
      {
        "type": "footer_links",
        "name": "Footer Links",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "show_social_icons",
            "label": "Show Icon with Social Links",
            "default": true
          },
          {
            "type": "link_list",
            "id": "footer_links_link_list",
            "label": "Footer Navigation Linklist",
            "default": "footer"
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      },
      {
        "type": "newsletter",
        "name": "Newsletter Signup",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Newsletter Signup Heading",
            "default": "Signup For Newsletter"
          },
          {
            "type": "text",
            "id": "heading_classes",
            "label": "Newsletter Signup Heading Classes"
          },
          {
            "type": "text",
            "id": "placeholder_text",
            "label": "Email Input Placeholder Text",
            "default": "Email"
          },
          {
            "type": "text",
            "id": "submit_icon",
            "label": "Icon for Submit Button",
            "info": "write out the icon snippet name e.g. `icon-envelope`",
            "default": "icon-envelope"
          },
          {
            "type": "text",
            "id": "submit_text",
            "label": "Text for Submit Button"
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      }
    ]
  }
{% endschema %}
