{%- include 'section',
  section_name: 'Bottom Bar',
  blocks_snippet: 'bottom-bar-case-statement',
  container: 'grid' -%}

{% schema %}
  {
    "name": "Bottom bar",
    "class": "bottom-bar-wrapper",
    "settings": [
      {
        "id": "enabled",
        "type": "checkbox",
        "label": "Bottom bar enabled",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Content",
        "limit": 1,
        "settings": [
          {
            "id": "bottom_bar_content",
            "type": "textarea",
            "label": "Bottom bar Content"
          }
        ]
      },
      {
        "type": "logo",
        "name": "Logo",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "footer_logo",
            "label": "Footer Logo"
          },
          {
            "type": "text",
            "id": "logo_snippet_name",
            "label": "Logo Snippet Name",
            "info": "if logo is an svg snippet, enter the snippet name here"
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      },
      {
        "type": "social_links", "name": "Social Links",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "facebook_link",
            "label": "Show Facebook Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "twitter_link",
            "label": "Show Twitter Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "instagram_link",
            "label": "Show Instagram Link",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "youtube_link",
            "label": "Show YouTube Link",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "pinterest_link",
            "label": "Show Pinterest Link",
            "default": false
          },
          {
            "type": "text",
            "id": "group_name",
            "label": "Group Name",
            "info": "to group blocks together, give them the same group name"
          }
        ]
      }
    ]
  }
{% endschema %}
