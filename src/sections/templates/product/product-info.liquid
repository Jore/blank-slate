{%- include 'section',
  section_name: 'Product Info',
  section_snippet: 'product-info',
  wrapper: 'grid',
  show_compare_at_price: section.settings.show_compare_at_price,
  show_option_name: section.settings.show_option_name,
  show_selected_value: section.settings.show_selected_value,
  add_to_cart_button_text: section.settings.add_to_cart_button_text,
  add_to_cart_button_classes: section.settings.add_to_cart_button_classes, -%}

{% schema %}
  {
    "name": "Product Info",
    "class": "product-info-wrapper",
    "settings": [
      {
        "type": "header",
        "content": "Product Info"
      },
      {
        "id": "show_compare_at_price",
        "type": "checkbox",
        "label": "Show compare at price?",
        "default": true
      },
      {
        "id": "show_option_name",
        "type": "checkbox",
        "label": "Show option name?",
        "default": true
      },
      {
        "id": "show_selected_value",
        "type": "checkbox",
        "label": "Show selected option value?",
        "default": true
      },
      {
        "id": "add_to_cart_button_text",
        "type": "text",
        "label": "Add to cart button text",
        "default": "Add to Cart"
      },
      {
        "id": "add_to_cart_button_classes",
        "type": "text",
        "label": "Add to cart button classes",
        "default": "button--primary"
      },
      {
        "type": "header",
        "content": "Classes"
      },
      {
        "id": "container_classes",
        "type": "text",
        "label": "Section Container Classes",
        "placeholder": "flex-12 s-flex-6",
        "info": "Class string applied to outermost section element"
      },
      {
        "type": "text",
        "id": "children_classes",
        "label": "Children Classes",
        "placeholder": "flex-12 m-flex-4",
        "info": "Class string applied to every block in section"
      },
      {
        "type": "header",
        "content": "Name"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Section Name",
        "placeholder": "Best Sellers Row",
        "info": "Give the section a specific identifier. Adds handlized version of name to inner section container element and updates the title of the section in the admin sidebar."
      }
    ]
  }
{% endschema %}
