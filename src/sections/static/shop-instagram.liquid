{%- include 'section',
  section_name: 'Shop Instagram',
  section_snippet: 'shop-instagram',
  instagram_tile_count: section.settings.instagram_tile_count,
  user_id: section.settings.userid,
  client_id: section.settings.clientid,
  access_token: section.settings.accesstoken, -%}

{% schema %}
  {
    "name": "Shop Instagram",
    "class": "shop-instagram-wrapper",
    "settings": [
      {
        "type": "header",
        "content": "Section Heading"
      },
      {
        "id": "heading",
        "type": "text",
        "label": "Section Heading",
        "placeholder": "Best Sellers"
      },
      {
        "id": "heading_classes",
        "type": "text",
        "label": "Section Heading Classes",
        "placeholder": "heading-two",
        "info": "Class string applied heading element"
      },
      {
        "id": "sub_heading",
        "type": "text",
        "label": "Section Sub-heading",
        "placeholder": "Our best selling products"
      },
      {
        "id": "sub_heading_classes",
        "type": "text",
        "label": "Section Sub-heading Classes",
        "placeholder": "text-three u-text-uppercase",
        "info": "Class string applied sub-heading element"
      },
      {
        "type": "header",
        "content": "Section Settings"
      },
      {
        "id": "instagram_tile_count",
        "type": "range",
        "min": 1,
        "max": 24,
        "step": 1,
        "label": "Max Instagram tiles to show",
        "default": 12
      },
      {
        "type": "text",
        "id": "userid",
        "label": "User Id",
        "default": "2324131028"
      },
      {
        "type": "text",
        "id": "clientid",
        "label": "Client Id",
        "default": "422b4d6cf31747f7990a723ca097f64e"
      },
      {
        "type": "text",
        "id": "accesstoken",
        "label": "Access Token",
        "default": "2324131028.422b4d6.d6d71d31431a4e8fbf6cb1efa1a2dfdc"
      },
      {
        "type": "checkbox",
        "id": "is_slider",
        "label": "Section is slider",
        "default": false
      },
      {
        "type": "color",
        "id": "section_background_color",
        "label": "Section background color"
      },
      {
        "type": "header",
        "content": "Classes"
      },
      {
        "id": "container_classes",
        "type": "text",
        "label": "Section Container Classes",
        "placeholder": "flex-12 s-flex-6",
        "info": "Class string applied to outermost section element"
      },
      {
        "type": "text",
        "id": "children_classes",
        "label": "Children Classes",
        "placeholder": "flex-12 m-flex-4",
        "info": "Class string applied to every block in section"
      },
      {
        "type": "header",
        "content": "Name"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Section Name",
        "placeholder": "Best Sellers Row",
        "info": "Give the section a specific identifier. Adds handlized version of name to inner section container element and updates the title of the section in the admin sidebar."
      }
    ]
  }
{% endschema %}
